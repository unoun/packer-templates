{
    "variables": {
        "debian_version": "8.1.0"
    },
    "builders": [
        {
            "type": "virtualbox-iso",
            "iso_url": "http://cdimage.debian.org/cdimage/release/current/amd64/iso-cd/debian-{{user `debian_version`}}-amd64-netinst.iso",
            "iso_checksum_type": "md5",
            "iso_checksum": "1a311f9afb68d6365211b13b4342c40b",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_wait_timeout": "60m",
            "http_directory": "http",
            "boot_command": [
                "<esc><wait>",
                "auto",
                " url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg",
                "<enter>"
            ],
            "guest_os_type": "Debian_64",
            "shutdown_command": "sudo shutdown -h now"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "only": ["virtualbox-iso"],
            "scripts": [
                "scripts/base.sh",
                "scripts/vagrant.sh",
                "scripts/sshd.sh",
                "scripts/virtualbox.sh",
                "scripts/cleanup.sh"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "only": ["virtualbox-iso"],
            "output": "debian-{{user `debian_version`}}-amd64_{{.BuildName}}_{{.Provider}}.box"
        }
    ]
}
