{
    "builders": [
        {
            "type": "virtualbox-iso",
            "iso_url": "http://cdimage.debian.org/cdimage/release/current/amd64/iso-cd/debian-8.0.0-amd64-netinst.iso",
            "iso_checksum_type": "md5",
            "iso_checksum": "d9209f355449fe13db3963571b1f52d4",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_wait_timeout": "60m",
            "http_directory": "http",
            "boot_command": [
                "<esc><wait>",
                "auto",
                " url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
                "<enter>"
            ],
            "guest_os_type": "Debian_64",
            "shutdown_command": "sudo shutdown -h now"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "only": ["virtualbox-iso"],
            "scripts": [
                "scripts/vagrant.sh",
                "scripts/sshd.sh",
                "scripts/virtualbox.sh"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "only": ["virtualbox-iso"],
            "output": "debian-8.0.0-amd64_{{.BuildName}}_{{.Provider}}.box"
        }
    ]
}
